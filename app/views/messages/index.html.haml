= render partial: "message"

.left-box
  .user.clearfix
    .user__name
      = current_user.name
    = link_to edit_user_path(current_user.id) do
      %user__i.fa.fa-cog
    = link_to new_group_path do
      %user__i.fa.fa-pencil-square-o
  .list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .list__groups-list
          = group.name
        .list__group-messages
          まだメッセージはありません

.right-box
  .group.clearfix
    .group__group-name2
      = @group.name
    = link_to root_path do
      %input{type: "submit", value: "Edit"}
    .group__members-name
      Member :
      = @group.users.name
  .contents
    .contents__content
      %span.contents__content__members-name
      %span.contents__content__time1
      .contents__content__message
  .user-action
  = form_for [@group, @message] do |f|
    .user-action__box
      = f.text_field :body, placeholder: "type a message", id: "chat_group_name", class: "chat-group-form__input"
      .chat-file
        = f.file_field :image, class: "chat-file", style: "display:none;", id: "message_image"
      .image
        = f.label :image, class: "image" do
          .fa.fa-picture-o.user-action__box__image
      = f.submit "Send"
